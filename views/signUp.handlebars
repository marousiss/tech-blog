<div class"center">
  <div class="sign-in center">
    <div class="sign-up">
      <h4>Sign Up</h4>
    </div>
    <form class="form signUp-form">
      <div class="form-group">
        <label for="name-login">username:</label>
        <input class="form-input" type="text" id="name-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary login-btn" type="submit" id="login-btn">sign up</button>
      </div>
    </form>
    <div class="sign-in-link">
      <a href="/login">Login instead</a>
    </div>
  </div>
</div>

<script src="./js/signUp.js"></script>