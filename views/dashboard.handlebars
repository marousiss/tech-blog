
  {{#each posts as |post|}}
    <a href="/updatepost/{{post.id}}">
      <div class="row post">
        <div class="title">
          <h5>{{post.title}}</h5>
          <h6>Posted by: {{post.user.name}} on {{format_date post.date_created}}</h6>
        </div>
        <p>{{post.content}}</p>
      </div>
    </a>
  {{/each}}


  <div class="row center add-post-link">
      <a href="/addnewpost">Add post</a>
  </div>

